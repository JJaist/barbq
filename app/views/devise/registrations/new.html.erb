<%= render "devise/shared/error_messages", resource: resource %>

<div class="w-100 d-flex flex-column justify-content-center align-items-right">
  <div class="col-md-6 col-12">

    <h2>Регистрация</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form-group mt-3">
      <%= f.label "Email", class: "exampleInputEmailSm" %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "Email", class: "form-control" %>
    </div>

    <div class="form-group mt-3">
      <%= f.label "Имя" %>
      <%= f.text_field :name, class: 'form-control form-inline' %>
    </div>

    <div class="form-group mt-3">
      <%= f.label "Пароль" %>
      <% if @minimum_password_length %>
      <em>не менее <%= @minimum_password_length %> символов</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group mt-3">
      <%= f.label "Подтверждение пароля" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div>
      <%= f.submit "Зарегистрироваться" , class: "btn btn-md btn-primary mt-3"%>
    </div>

    <%=render "devise/shared/links" %>
  </div>
  <% end %>
</div>
