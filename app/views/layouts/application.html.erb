<!DOCTYPE html>
<html>
  <head>
    <title>Barbq</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
        <a><%= link_to 'BBQ', root_path, class: 'navbar-brand' %></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <% if user_signed_in? %>
          <%= link_to 'Профиль', current_user, class: 'nav-link' %>
          <%= button_to 'Выйти', destroy_user_session_path, method: :delete, class: 'nav-link border-0 bg-transparent' %>
        <% else %>
          <%= link_to 'Войти', new_user_session_path, class: 'nav-link'  %>
          <%= link_to 'Зарегистрироваться', new_user_registration_path, class: 'nav-link'  %>
        <% end %>
      </div>
    </div>
  </div>
</nav>

    <div class="container">
      <div class="row">
        <div class="col-lg-9">
          <%= yield %>
        </div>
        <div class="col-lg-3">
        </div><!--/span-->
      </div><!--/row-->
    </div> <!-- /container -->
  </body>
</html>
